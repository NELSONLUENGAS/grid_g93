{
	"estructura": {
		"header": {
			"logo": "Delicious Bites",
			"navegación": [
				{ "etiqueta": "Inicio", "href": "/" },
				{ "etiqueta": "Menú", "href": "/menu" },
				{ "etiqueta": "Sobre Nosotros", "href": "/about" },
				{ "etiqueta": "Contacto", "href": "/contact" }
			]
		},
		"distribución": {
			"sidebar": {
				"título": "Categorías",
				"elementos": [
					{ "nombre": "Entradas", "icono": "fa-utensils" },
					{ "nombre": "Platos Principales", "icono": "fa-hamburger" },
					{ "nombre": "Postres", "icono": "fa-ice-cream" },
					{ "nombre": "Bebidas", "icono": "fa-wine-glass-alt" }
				]
			},
			"main": {
				"grid": {
					"columnas": 3,
					"espacio": "1rem",
					"contenedorId": "grilla-menu"
